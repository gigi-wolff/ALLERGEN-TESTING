
table, th, tr {
  margin: auto;
  font-size: 1.8rem;
  border: 1px solid #9fbfdf;
}

th {
  color: #465f6e;
}

th > a {
  color: #465f6e;
}

tr:nth-child(even) {
  background-color: #ecf2f9;
}

tr:nth-child(odd) {
  background-color: #d9e6f2;
}

/* does not apply to first row */
tr:not(:first-child):hover{
  border: 2px solid #7e97b1
}

.input-group {
  font-size: 3rem;
}
.text-color-ok,
.text-not-color-ok {
  font-weight: bold;
}
.text-color-ok {
  color: green;
}

.text-color-not-ok {
  color: #a94442;
}

#background-ok {
  color: #e8eee7;
}

#background-not-ok {
  color: #f8f0ed;
}

.product-form-label{
  margin-top: -10px;
  color: #00334d;
  font-size: 2.5rem;
}


