body {
  background-image: url(<%= asset_path 'background-1.jpg' %>);
  background-size: auto 100%;
  background-repeat: repeat-y;
  /*background-color and background-blend-mode impact opacity;*/
  background-color: rgba(255, 255, 255, .8) !important;
  background-blend-mode: color;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif;
}

.my-container {
  width: 100vw;
  height: 100vh;
  padding-left: 5%;
  padding-right: 5%;

}

#index-panel,
#show-panel {
  display: block;
  margin-left: 2%;
  float: left;
}

#index-panel {
  height: 325px; /* panel(height) = panel-body(h) + index-panel-heading(h) */
  width: 20%;
  margin-bottom: 2%;
  box-shadow: 4px 4px 1px 4px rgba(0, 0, 0, 0.3)
}

#show-panel {
  width: 100%;
  margin-top: 5px;
  margin-bottom: 5%;
  box-shadow: 2px 2px 1px 2px rgba(0, 0, 0, 0.3)
}

#index-panel-heading,
#show-panel-heading {
  padding: 0px 0px;
  background-color: #c8d7e4;
  position: relative;
  font-size: 1.6rem;
  font-weight: bold;
  text-align: center;
}

#index-panel-heading {
  line-height: 100px;
  height: 100px; /* panel-body height + panel-heading height = panel-height */
}

#show-panel-heading {
  line-height: normal;
  height: fit-content;
}

#index-panel-button {
  white-space: normal; /* make text in button wrap */
  font-size: 1.8rem;
}

#index-panel-body,
#show-panel-body {
  background-color: #e4edf5;
  text-align: center;
}

#index-panel-body {
  height: 225px; /* panel-body height + panel-heading height = panel-height */
  overflow-y:auto;
}

#show-panel-body { 
  height: auto;
  padding-top: 15px;
  padding-bottom: 15px;
}

.allergen-show-heading{
  padding: 0px 0px;
  background-color: #c8d7e4;
  position: relative;
  font-size: 2rem;
  line-height: 100px;
  height: 100px;
  font-weight: bold;
  text-align: center;
}

#shrink {
  /*
  -webkit-transform:scale(0.8);
  -moz-transform:scale(0.8);
  -ms-transform:scale(0.8);
  transform:scale(0.8);
  */
  display: inline-grid;
  margin: 1%;

}

#enlarge {
  -webkit-transform:scale(1.8);
  -moz-transform:scale(1.8);
  -ms-transform:scale(1.8);
  transform:scale(1.8);
}

.btn {
  border: 1px solid;
  border-color: #3d505f !important;
}
.btn-lg {
  margin-top: 3px;
}

.btn-primary {
  background-color: #657c8e  !important; 
  border-color: #586c7b !important;
}

.btn-primary:hover {
  color: #fff;
  background-color: #3d5060 !important;
  border-color: #222635 !important;
}

.allergen-form-label {
  margin-top: -10px;
  font-size: 2.5rem;
}

.product-action-button{
  color: white !important;
  background-color: #826205 !important;
  border-color: #f5dc95 !important;
}

.product-action-button:hover {
  color: #fff;
  background-color: #674d03 !important;
  border-color: #f5dc95 !important;
}

.allergen-action-button{
  color: white;
  background-color: #7b2a2a !important;; 
  border-color: #d8c0c0 !important;
}

.allergen-action-button:hover {
  color: white;
  background-color: #5a1f1f !important;
  border-color: #d8c0c0 !important;
}

.spacer{
  display: inline-block;
  width: 40px;
}
/*------------------*/
@media (max-width: 2000px) {
  #index-panel {  
    width: 30%;
  }
}

@media (max-width: 1500px) {
  #index-panel { 
    width: 40%;
  }
}

@media (max-width: 1000px) {
  #index-panel { 
    float: none;
    margin:auto;
    margin-bottom: 2%;
    width: 60%;
  }
}

